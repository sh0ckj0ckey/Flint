                                        <muxc:HyperlinkButton.OpacityTransition>
                                            <ScalarTransition />
                                        </muxc:HyperlinkButton.OpacityTransition>
                                        <ToolTipService.ToolTip>
                                            <ToolTip>
                                                <TextBlock>
                                                    <Run Text="info" FontWeight="Bold"/>
                                                    <Run Text="/ˈɪn.fəʊ/"/>
                                                    <Run Text="noun" FontStyle="Italic" FontWeight="Medium"/>
                                                    <Run Text="详情"/>
                                                </TextBlock>
                                            </ToolTip>
                                        </ToolTipService.ToolTip>
                                    </muxc:HyperlinkButton>-->
    </Grid>
</Page>
