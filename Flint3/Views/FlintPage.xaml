<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Flint3.Views.FlintPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Flint3.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls" 
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:cvt="using:Flint3.Converters" 
    xmlns:mdl="using:Flint3.Data.Models" 
    xmlns:controls="using:CommunityToolkit.WinUI.UI" 
    Background="Transparent" NavigationCacheMode="Required" Loaded="Page_Loaded">

    <Page.Resources>
        <cvt:Int2VisibilityConverter x:Key="Int2Vis"/>
        <cvt:Equal2VisibilityConverter x:Key="Eql2Vis"/>
        <cvt:LineBreaksRemover x:Key="LinebreakRemove"/>
        <cvt:Bool2VisibilityConverter x:Key="Bool2Vis"/>
        <cvt:NullOrEmpty2VisibilityConverter x:Key="Null2Vis"/>
        <cvt:IsExpanded2OpacityConverter x:Key="Bool2Opacity"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="42"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid x:Name="AppTitleBar" Grid.Row="0" Background="Transparent">
            <TextBlock Text="Flint" FontFamily="Times New Roman" Margin="20,0,0,0" FontWeight="SemiBold" FontSize="16" CharacterSpacing="40" VerticalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="1" Padding="16,0" Margin="0,0,0,0">
            <TextBox x:Name="SearchTextBox" TextChanged="OnSearchTextChanged" GotFocus="OnSearchBoxGotFocus">
                <ToolTipService.ToolTip>
                    <ToolTip>
                        <TextBlock>
                            <Run Text="search" FontWeight="Bold"/>
                            <Run Text="/sɜːtʃ/"/>
                            <Run Text="verb" FontStyle="Italic" FontWeight="Medium"/>
                            <Run Text="搜索"/>
                        </TextBlock>
                    </ToolTip>
                </ToolTipService.ToolTip>
            </TextBox>
            <TextBlock Text="开始键入..." Margin="16,6,0,0" FontSize="17.5" Opacity="0.3" HorizontalAlignment="Left" CharacterSpacing="64" IsHitTestVisible="False" VerticalAlignment="Top"
                       Visibility="{x:Bind SearchTextBox.Text.Length,Mode=OneWay,Converter={StaticResource Int2Vis},ConverterParameter=-}"/>
        </Grid>
        <Grid Grid.Row="2" Visibility="{x:Bind _viewModel.SearchResultWordItems.Count,Mode=OneWay,Converter={StaticResource Int2Vis},ConverterParameter=-}">
            <Image Source="/Assets/Logos/flint_logo.png" Height="72" Width="72" Opacity="0.1"/>
        </Grid>
        <Grid Grid.Row="2">
            <ListView ItemsSource="{x:Bind _viewModel.SearchResultWordItems,Mode=OneWay}" HorizontalContentAlignment="Stretch"
                      Margin="0,4,0,0" Padding="0,8,2,8" HorizontalAlignment="Stretch" SelectionMode="None" IsItemClickEnabled="False">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="mdl:StarDictWordItem">
                        <muxc:Expander x:Name="WordExpander" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" Margin="0,0,0,4" IsExpanded="False">
                            <muxc:Expander.Header>
                                <StackPanel Orientation="Vertical" Margin="0,8,0,8" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{x:Bind Word}" FontSize="18" FontWeight="SemiBold" CharacterSpacing="40" VerticalAlignment="Center"/>
                                        <TextBlock Margin="8,0,0,0" FontSize="16" Opacity="0.5" FontWeight="Light" VerticalAlignment="Center" Visibility="{x:Bind Phonetic,Converter={StaticResource Null2Vis}}" IsTextSelectionEnabled="True">
                                            <Run Text="/" FontSize="14"/>
                                            <Run Text="{x:Bind Phonetic}"/>
                                            <Run Text="/" FontSize="14"/>
                                        </TextBlock>
                                    </StackPanel>
                                    <TextBlock Text="{x:Bind Translation,Converter={StaticResource LinebreakRemove}}" FontSize="13" MaxLines="2" LineHeight="20" TextWrapping="WrapWholeWords" TextTrimming="CharacterEllipsis"
                                               Opacity="{Binding ElementName=WordExpander,Path=IsExpanded,Mode=OneWay,Converter={StaticResource Bool2Opacity}}"/>
                                </StackPanel>
                            </muxc:Expander.Header>
                            <muxc:Expander.Content>
                                <StackPanel Orientation="Vertical">
                                    <Grid HorizontalAlignment="Stretch">
                                        <TextBlock Text="{x:Bind Translation}" Opacity="0.7" TextWrapping="WrapWholeWords" LineHeight="24" IsTextSelectionEnabled="True" CharacterSpacing="64"/>
                                    </Grid>
                                    <Grid HorizontalAlignment="Stretch" Margin="0,8,0,0" Visibility="{x:Bind Definition,Converter={StaticResource Null2Vis}}">
                                        <TextBlock Text="{x:Bind Definition}" Opacity="0.7" TextWrapping="WrapWholeWords" LineHeight="24" IsTextSelectionEnabled="True" CharacterSpacing="32"/>
                                    </Grid>
                                    <Grid HorizontalAlignment="Stretch" CornerRadius="4" Padding="0,12,0,0"
                                          Visibility="{x:Bind Exchanges,Converter={StaticResource Null2Vis}}">
                                        <muxc:ItemsRepeater ItemsSource="{x:Bind Exchanges}">
                                            <muxc:ItemsRepeater.Layout>
                                                <muxc:StackLayout Spacing="8" Orientation="Vertical"/>
                                            </muxc:ItemsRepeater.Layout>
                                            <DataTemplate x:DataType="mdl:WordExchangeItem">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.Column="0" Background="{ThemeResource SETTING_ITEM_BK}" Padding="6,2,6,4" CornerRadius="8">
                                                        <TextBlock Text="{x:Bind Type}" FontWeight="Light" FontSize="12.5" Opacity="0.6" CharacterSpacing="40"/>
                                                    </Border>
                                                    <TextBlock Grid.Column="1" Text="{x:Bind Word}" FontSize="14" Margin="6,0,0,0" Opacity="0.8" CharacterSpacing="40" IsTextSelectionEnabled="True"/>
                                                </Grid>
                                            </DataTemplate>
                                        </muxc:ItemsRepeater>
                                    </Grid>
                                </StackPanel>
                            </muxc:Expander.Content>
                        </muxc:Expander>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <Grid Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Rectangle Height="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Fill="{ThemeResource SETTING_LINE_BK}" Visibility="{x:Bind _viewModel.SearchResultWordItems.Count,Mode=OneWay,Converter={StaticResource Int2Vis}}"/>
            <Button x:Name="SettingsButton" Margin="8,8,0,8" Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Left" VerticalAlignment="Center" Click="OnClickSettingsButton">
                <ToolTipService.ToolTip>
                    <ToolTip>
                        <TextBlock>
                            <Run Text="setting" FontWeight="Bold"/>
                            <Run Text="/ˈset.ɪŋ/"/>
                            <Run Text="noun" FontStyle="Italic" FontWeight="Medium"/>
                            <Run Text="设置"/>
                        </TextBlock>
                    </ToolTip>
                </ToolTipService.ToolTip>
                <muxc:AnimatedIcon x:Name="SettingsAnimatedIcon" Height="22" Width="22" Opacity="0.8">
                    <muxc:AnimatedIcon.Source>
                        <animatedvisuals:AnimatedSettingsVisualSource/>
                    </muxc:AnimatedIcon.Source>
                    <muxc:AnimatedIcon.FallbackIconSource>
                        <muxc:SymbolIconSource Symbol="Setting"/>
                    </muxc:AnimatedIcon.FallbackIconSource>
                </muxc:AnimatedIcon>
            </Button>
            <StackPanel Margin="0,8,8,8" Spacing="4" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <Button x:Name="NewFeatureButton" Visibility="Collapsed" Click="OnClickShowMeNewFeature" Style="{StaticResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xF133;" FontSize="15" Margin="0,0,4,0"/>
                        <TextBlock Text="新增功能 !" FontSize="12" CharacterSpacing="48"/>
                    </StackPanel>
                </Button>
                <ToggleButton x:Name="PinToggleButton" Height="34" Width="42" IsChecked="False" Padding="0" Background="Transparent" BorderBrush="Transparent" Click="OnClickPin">
                    <ToolTipService.ToolTip>
                        <ToolTip>
                            <TextBlock>
                                <Run Text="topmost" FontWeight="Bold"/>
                                <Run Text="/ˈtɒp.məʊst/"/>
                                <Run Text="adjective" FontStyle="Italic" FontWeight="Medium"/>
                                <Run Text="置顶"/>
                            </TextBlock>
                        </ToolTip>
                    </ToolTipService.ToolTip>
                    <Grid>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE141;" FontSize="16" Height="22" Width="22" Opacity="0.8"
                                  Visibility="{x:Bind PinToggleButton.IsChecked,Mode=OneWay,Converter={StaticResource Bool2Vis},ConverterParameter=-}"/>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE196;" FontSize="16" Height="22" Width="22" Opacity="0.8"
                                  Visibility="{x:Bind PinToggleButton.IsChecked,Mode=OneWay,Converter={StaticResource Bool2Vis}}"/>
                    </Grid>
                </ToggleButton>
                <Button Height="34" Width="42" Padding="0" Visibility="Collapsed" Background="Transparent" BorderBrush="Transparent" Click="OnClickHide">
                    <ToolTipService.ToolTip>
                        <ToolTip>
                            <TextBlock>
                                <Run Text="hide" FontWeight="Bold"/>
                                <Run Text="/haɪd/"/>
                                <Run Text="verb" FontStyle="Italic" FontWeight="Medium"/>
                                <Run Text="隐藏"/>
                            </TextBlock>
                        </ToolTip>
                    </ToolTipService.ToolTip>
                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE8AD;" FontSize="16" UseLayoutRounding="False" CenterPoint="11,11,0" Rotation="90" Height="22" Width="22" Opacity="0.8"/>
                </Button>
            </StackPanel>

            <!--教学 2/2-->
            <TeachingTip x:Name="SecondTeachingTip" Target="{x:Bind SettingsButton}" IsOpen="False" Title="快速唤醒燧石" Subtitle="按下 Alt + 空格键 可以将燧石窗口唤醒" PreferredPlacement="TopRight"
                         CloseButtonContent="我知道了" CloseButtonClick="OnClickCloseSecondTeachingTip">
                <TeachingTip.Content>
                    <TextBlock Text="可以在设置中修改为更加趁手的快捷键" TextWrapping="Wrap" FontSize="13" Margin="0,2,0,0" Opacity="0.7"/>
                </TeachingTip.Content>
            </TeachingTip>
        </Grid>
        
        <!--教学 1/2-->
        <Border x:Name="FirstTeachingTipTargetBorder" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="Transparent" Width="1" Height="1" Margin="0,0,40,0"/>
        <TeachingTip x:Name="FirstTeachingTip" Target="{x:Bind FirstTeachingTipTargetBorder}" IsOpen="False" Title="欢迎使用燧石" Subtitle="点击关闭按钮或者按下 Esc 会将燧石隐藏到系统托盘" PreferredPlacement="BottomLeft"
                     CloseButtonContent="我知道了" CloseButtonClick="OnClickCloseFirstTeachingTip">
            <TeachingTip.HeroContent>
                <Image Source="/Assets/teachingtip_img.jpg" Stretch="UniformToFill" Height="115" HorizontalAlignment="Right"/>
            </TeachingTip.HeroContent>
            <TeachingTip.Content>
                <TextBlock Text="想要退出燧石，请右键系统托盘图标" TextWrapping="Wrap" FontSize="13" Margin="0,2,0,0" Opacity="0.7"/>
            </TeachingTip.Content>
        </TeachingTip>
    </Grid>
</Page>
